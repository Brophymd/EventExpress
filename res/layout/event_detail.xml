<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/linearLayout">
    <TextView
            style = "@style/TitleFont.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulls Picnic"
            android:id="@+id/textView_eventTitle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="All USF students welcome to join IEEE at Riverfront park for our annual fall picnic"
            android:id="@+id/textView_eventDescription"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/tableLayout">


        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time: "
                    android:id="@+id/textView_lblTime"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="11:00 AM"
                    android:id="@+id/textView_time"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date: "
                    android:id="@+id/textView_lblDate"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="10/21/2014"
                    android:id="@+id/textView_date" />
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Location: "
                    android:id="@+id/textView_lblLocation"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="E Fletcher Ave Tampa, FL"
                    android:id="@+id/textView_HD_location" />
        </TableRow>

    </TableLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" >
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2" android:layout_gravity="right" android:src="@drawable/map2"
                />
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_Decline"
                android:id="@+id/button_invite"
                android:layout_gravity="right"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_Accept"
                android:id="@+id/button_cancel"  />
        </LinearLayout>
</LinearLayout>
</ScrollView>