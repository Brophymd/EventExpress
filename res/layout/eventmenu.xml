<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/eventexpressbg">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Events_I_am_Attending"
            android:id="@+id/button_invite"
            android:onClick="eventsAttending"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_marginBottom="174dp" android:layout_alignParentRight="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Event_Invitations"
            android:id="@+id/button_cancel"
            android:onClick="eventsInvites"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:layout_above="@+id/button4"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_My_Created_Events"
            android:id="@+id/button4"
            android:onClick="createdEvents"
            android:layout_above="@+id/button_invite" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Events"
            android:id="@+id/textView"
            android:textColor="#ff43adff" android:textColorHighlight="#ffffffff"
            android:textSize="45dp" android:layout_above="@+id/button_cancel"
            android:layout_centerHorizontal="true" android:typeface="serif"/>
</RelativeLayout>