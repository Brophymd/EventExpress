<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            style="@style/TitleFont.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_Events_in_my_area"
            android:id="@+id/textView_eventsInArea"
            android:layout_alignParentLeft="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_eventsInArea"
            android:layout_alignParentLeft="true" android:layout_below="@+id/textView_eventsInArea"/>
</RelativeLayout>